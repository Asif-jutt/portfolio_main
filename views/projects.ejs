<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= typeof developerName !== 'undefined' ? developerName : 'Developer' %></title>
    <meta name="description" content="Explore my portfolio of web development projects and applications">
    <meta name="keywords" content="projects, portfolio, web development, applications, github">
    <meta name="author" content="<%= typeof developerName !== 'undefined' ? developerName : 'Developer' %>">
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Navigation -->
    <%- include('partials/navbar') %>
    
    <!-- Main Content -->
    <main id="main-content">
        <!-- Page Header -->
        <section class="page-header">
            <div class="container">
                <div class="page-header-content">
                    <h1 class="page-title">My Projects</h1>
                    <p class="page-subtitle">A collection of my recent work and side projects</p>
                </div>
            </div>
        </section>

        <!-- Project Filters -->
        <section class="project-filters">
            <div class="container">
                <div class="filters-container">
                    <div class="filter-buttons">
                        <button class="filter-btn <%= currentCategory === 'all' ? 'active' : '' %>" data-filter="all">
                            <i class="fas fa-th"></i>
                            All Projects
                        </button>
                        <button class="filter-btn <%= showFeaturedOnly ? 'active' : '' %>" data-filter="featured">
                            <i class="fas fa-star"></i>
                            Featured Only
                        </button>
                        <% allTechnologies.forEach(tech => { %>
                            <button class="filter-btn <%= currentCategory === tech.toLowerCase() ? 'active' : '' %>" data-filter="<%= tech.toLowerCase() %>">
                                <%= tech %>
                            </button>
                        <% }); %>
                    </div>
                </div>
            </div>
        </section>

        <!-- Projects Grid -->
        <section class="projects-section">
            <div class="container">
                <div class="projects-grid">
                    <% projects.forEach((project, index) => { %>
                        <div class="project-card" data-aos="fade-up" data-aos-delay="<%= index * 100 %>" 
                             data-technologies="<%= project.technologies.join(',').toLowerCase() %>"
                             data-featured="<%= project.featured %>">
                            <div class="project-image">
                                <img src="<%= project.image %>" alt="<%= project.name %>" loading="lazy">
                                <div class="project-overlay">
                                    <div class="project-links">
                                        <a href="<%= project.demo %>" target="_blank" rel="noopener" class="project-link" aria-label="Live Demo">
                                            <i class="fas fa-external-link-alt"></i>
                                        </a>
                                        <a href="<%= project.github %>" target="_blank" rel="noopener" class="project-link" aria-label="GitHub">
                                            <i class="fab fa-github"></i>
                                        </a>
                                    </div>
                                </div>
                                <% if (project.featured) { %>
                                    <div class="featured-badge">
                                        <i class="fas fa-star"></i>
                                        Featured
                                    </div>
                                <% } %>
                            </div>
                            <div class="project-content">
                                <h3 class="project-title"><%= project.name %></h3>
                                <p class="project-description"><%= project.description %></p>
                                <div class="project-technologies">
                                    <% project.technologies.forEach(tech => { %>
                                        <span class="tech-tag"><%= tech %></span>
                                    <% }); %>
                                </div>
                                <div class="project-actions">
                                    <a href="/projects/<%= project._id %>" class="btn btn-outline btn-sm">
                                        <i class="fas fa-info-circle"></i>
                                        View Details
                                    </a>
                                    <a href="<%= project.demo %>" target="_blank" rel="noopener" class="btn btn-primary btn-sm">
                                        <i class="fas fa-external-link-alt"></i>
                                        Live Demo
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>

                <% if (projects.length === 0) { %>
                    <div class="no-projects">
                        <div class="no-projects-content">
                            <i class="fas fa-folder-open"></i>
                            <h3>No projects found</h3>
                            <p>No projects match your current filter. Try selecting a different category.</p>
                        </div>
                    </div>
                <% } %>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="cta-section">
            <div class="container">
                <div class="cta-content">
                    <h2 class="cta-title">Interested in My Work?</h2>
                    <p class="cta-description">
                        I'm always working on new projects and open to collaboration. 
                        Let's discuss how we can work together!
                    </p>
                    <a href="/contact" class="btn btn-primary btn-large">
                        <i class="fas fa-envelope"></i>
                        Start a Project
                    </a>
                </div>
            </div>
        </section>
    </main>
    
    <!-- Footer -->
    <%- include('partials/footer') %>
    
    <!-- JavaScript -->
    <script src="/js/main.js"></script>
    <script src="/js/animations.js"></script>
    <script src="/js/project-filters.js"></script>
</body>
</html>
