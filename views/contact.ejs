<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= developerName %></title>
    <meta name="description" content="Get in touch with me for project collaborations, job opportunities, or just to say hello">
    <meta name="keywords" content="contact, get in touch, collaboration, hire developer">
    <meta name="author" content="<%= developerName %>">
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Navigation -->
    <%- include('partials/navbar') %>
    
    <!-- Main Content -->
    <main id="main-content">
        <!-- Page Header -->
        <section class="page-header">
            <div class="container">
                <div class="page-header-content">
                    <h1 class="page-title">Contact Me</h1>
                    <p class="page-subtitle">Let's discuss your project or just say hello</p>
                </div>
            </div>
        </section>

        <!-- Contact Content -->
        <section class="contact-content">
            <div class="container">
                <div class="contact-grid">
                    <!-- Contact Form -->
                    <div class="contact-form-section">
                        <div class="form-container">
                            <h2 class="form-title">Send me a message</h2>
                            <p class="form-subtitle">I'll get back to you within 24 hours</p>
                            
                            <% if (success) { %>
                                <div class="alert alert-success">
                                    <i class="fas fa-check-circle"></i>
                                    <%= success %>
                                </div>
                            <% } %>
                            
                            <% if (errors && errors.length > 0) { %>
                                <div class="alert alert-error">
                                    <i class="fas fa-exclamation-circle"></i>
                                    <ul>
                                        <% errors.forEach(error => { %>
                                            <li><%= error.msg %></li>
                                        <% }); %>
                                    </ul>
                                </div>
                            <% } %>
                            
                            <form action="/contact" method="POST" class="contact-form" id="contactForm">
                                <div class="form-group">
                                    <label for="name" class="form-label">Full Name *</label>
                                    <input type="text" 
                                           id="name" 
                                           name="name" 
                                           class="form-input" 
                                           value="<%= typeof formData !== 'undefined' && formData.name ? formData.name : '' %>"
                                           required>
                                    <span class="form-error" id="name-error"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label for="email" class="form-label">Email Address *</label>
                                    <input type="email" 
                                           id="email" 
                                           name="email" 
                                           class="form-input"
                                           value="<%= typeof formData !== 'undefined' && formData.email ? formData.email : '' %>"
                                           required>
                                    <span class="form-error" id="email-error"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label for="subject" class="form-label">Subject *</label>
                                    <input type="text" 
                                           id="subject" 
                                           name="subject" 
                                           class="form-input"
                                           value="<%= typeof formData !== 'undefined' && formData.subject ? formData.subject : '' %>"
                                           required>
                                    <span class="form-error" id="subject-error"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label for="message" class="form-label">Message *</label>
                                    <textarea id="message" 
                                              name="message" 
                                              class="form-textarea" 
                                              rows="6" 
                                              required><%= typeof formData !== 'undefined' && formData.message ? formData.message : '' %></textarea>
                                    <span class="form-error" id="message-error"></span>
                                </div>
                                
                                <button type="submit" class="btn btn-primary btn-large" id="submitBtn">
                                    <i class="fas fa-paper-plane"></i>
                                    Send Message
                                </button>
                            </form>
                        </div>
                    </div>
                    
                    <!-- Contact Information -->
                    <div class="contact-info-section">
                        <div class="contact-info-card">
                            <h2 class="info-title">Get in touch</h2>
                            <p class="info-description">
                                I'm always interested in new opportunities and exciting projects. 
                                Whether you have a question or just want to say hi, I'll try my best to get back to you!
                            </p>
                            
                            <div class="contact-details">
                                <div class="contact-item">
                                    <div class="contact-icon">
                                        <i class="fas fa-envelope"></i>
                                    </div>
                                    <div class="contact-detail">
                                        <h3>Email</h3>
                                        <a href="mailto:<%= developerEmail %>"><%= developerEmail %></a>
                                    </div>
                                </div>
                                
                                <div class="contact-item">
                                    <div class="contact-icon">
                                        <i class="fas fa-phone"></i>
                                    </div>
                                    <div class="contact-detail">
                                        <h3>Phone</h3>
                                        <a href="tel:<%= developerPhone %>"><%= developerPhone %></a>
                                    </div>
                                </div>
                                
                                <div class="contact-item">
                                    <div class="contact-icon">
                                        <i class="fas fa-map-marker-alt"></i>
                                    </div>
                                    <div class="contact-detail">
                                        <h3>Location</h3>
                                        <span><%= developerLocation %></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="social-links">
                                <h3>Follow me</h3>
                                <div class="social-buttons">
                                    <% if (developerGithub !== '#') { %>
                                    <a href="<%= developerGithub %>" target="_blank" rel="noopener" class="social-btn" aria-label="GitHub">
                                        <i class="fab fa-github"></i>
                                        <span>GitHub</span>
                                    </a>
                                    <% } %>
                                    <% if (developerLinkedin !== '#') { %>
                                    <a href="<%= developerLinkedin %>" target="_blank" rel="noopener" class="social-btn" aria-label="LinkedIn">
                                        <i class="fab fa-linkedin"></i>
                                        <span>LinkedIn</span>
                                    </a>
                                    <% } %>
                                    <% if (developerTwitter !== '#') { %>
                                    <a href="<%= developerTwitter %>" target="_blank" rel="noopener" class="social-btn" aria-label="Twitter">
                                        <i class="fab fa-twitter"></i>
                                        <span>Twitter</span>
                                    </a>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Map Section (Optional) -->
        <section class="map-section">
            <div class="container">
                <div class="map-container">
                    <h2 class="section-title">Find me here</h2>
                    <div class="map-placeholder">
                        <i class="fas fa-map-marker-alt"></i>
                        <p>Interactive map would go here</p>
                        <small><%= developerLocation %></small>
                    </div>
                </div>
            </div>
        </section>
    </main>
    
    <!-- Footer -->
    <%- include('partials/footer') %>
    
    <!-- JavaScript -->
    <script src="/js/main.js"></script>
    <script src="/js/animations.js"></script>
    <script src="/js/contact-form.js"></script>
</body>
</html>
